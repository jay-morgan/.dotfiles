#!/usr/bin/env bash
selected=`cat ~/.dotfiles/tmux/.chtsh-languages ~/.dotfiles/tmux/.chtsh-command | fzf`
if [[ -z $selected ]]; then
    exit 0
fi

read -p "Enter Query: " query

if grep -qs "$selected" ~/.dotfiles/tmux/.chtsh-languages; then
    query=`echo $query | tr ' ' '+'`
    tmux new-window bash -c "echo \"curl cht.sh/$selected/$query/\" & curl cht.sh/$selected/$query & while [ : ]; do sleep 1; done"
else
    tmux new-window bash -c "curl -s cht.sh/$selected~$query | less -R"
fi
