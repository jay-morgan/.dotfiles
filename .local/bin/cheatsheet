#!/usr/bin/env bash
selected=`cat ~/.tmux/.cheatsheet-languages ~/.tmux/.cheatsheet-utilities | fzf`
if [[ -z $selected ]]; then
    exit 0
fi

read -p "Enter Query: " query

if grep -qs "$selected" ~/personal/.dotfiles/tmux/.cheatsheet-languages; then
    query=`echo $query | tr ' ' '+'`
    tmux new-window bash -c "echo \"curl cht.sh/$selected/$query/\" & curl cht.sh/$selected/$query & while [ : ]; do sleep 1; done"
else
    tmux new-window bash -c "curl -s cht.sh/$selected~$query | less -R"
fi
